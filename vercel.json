{
  "outputDirectory": "apps/web/.next",
  "buildCommand": "pnpm run build",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "projectSettings": {
    "framework": "nextjs",
    "buildCommand": "cd apps/web && pnpm run build",
    "outputDirectory": "apps/web/.next",
    "rootDirectory": "apps/web"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 